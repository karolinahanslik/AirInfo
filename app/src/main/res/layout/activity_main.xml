                            />
                        <!-- O3 odniesienie do normy-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/O3_Norma"
                            android:text="--"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/O3_TextView"
                            app:layout_constraintStart_toStartOf="@id/O3_TextView"
                            app:layout_constraintEnd_toEndOf="@id/O3_TextView"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/NazwaPm10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Wykres zmiany wartości PM10:"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/Leftguideline2"
                    app:layout_constraintTop_toBottomOf="@id/PmCardView" />

                <!--        PM10 wykres-->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/WykresP10_CardView"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#656565"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintLeft_toLeftOf="@id/Leftguideline2"
                    app:layout_constraintRight_toRightOf="@id/Rightguideline2"
                    app:layout_constraintTop_toBottomOf="@id/NazwaPm10">

                </com.github.mikephil.charting.charts.LineChart>

                <TextView
                    android:id="@+id/NazwaCO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Wykres zmiany wartości CO:"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/Leftguideline2"
