                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@id/PM2_TextView"
                            app:layout_constraintStart_toStartOf="@id/PM2_TextView"
                            />
                        <!--NO2 odniesienie do normy-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/NO2_Norma"
                            android:text="--"
                            android:layout_marginBottom="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/white"
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@id/NO2_TextView"
                            app:layout_constraintStart_toStartOf="@id/NO2_TextView"
                            app:layout_constraintEnd_toEndOf="@id/NO2_TextView"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/O3_Nazwa"
                            app:layout_constraintTop_toBottomOf="@id/CO_TextView"
                            app:layout_constraintStart_toStartOf="@id/CO_TextView"
                            app:layout_constraintEnd_toEndOf="@id/CO_TextView"
                            android:layout_marginTop="40dp"
                            android:text="O3"/>
                        <!-- O3 wartosc z API-->
                        <TextView
                            android:id="@+id/O3_TextView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
