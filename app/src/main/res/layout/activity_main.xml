                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#656565"
                    android:id="@+id/WykresPM2CardView"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintLeft_toLeftOf="@id/Leftguideline2"
                    app:layout_constraintRight_toRightOf="@id/Rightguideline2"
                    app:layout_constraintTop_toBottomOf="@id/NazwaPm2">

                </com.github.mikephil.charting.charts.LineChart>
                <TextView
                    android:id="@+id/NazwaSO2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Wykres zmiany wartości SO2"
                    android:textColor="@color/white"
                    app:layout_constraintLeft_toLeftOf="@id/Leftguideline2"
