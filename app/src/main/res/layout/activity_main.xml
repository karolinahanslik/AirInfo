<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35374B"
    tools:context=".MainActivity"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Leftguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:visibility="invisible"

            app:layout_constraintGuide_percent="0.03"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/Rightguideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.97" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="AirInfo"
            android:textColor="#6F93A9"
            android:id="@+id/NazwaAplikacji"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/air"
            app:layout_constraintTop_toTopOf="@id/NazwaAplikacji"
            app:layout_constraintBottom_toBottomOf="@id/NazwaAplikacji"
           app:layout_constraintStart_toEndOf="@id/NazwaAplikacji"/>

        <!--        nazwa miasta-->
        <TextView
            android:id="@+id/CityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nazwa miasta"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/NazwaAplikacji"
            tools:ignore="MissingConstraints" />

        <!--        przycisk lokalizujący użytkownika-->
        <!--        tu zmieniam z ImageButton na RelativeLayout-->
<!--        android:src="@mipmap/loc"-->
        <RelativeLayout
            android:id="@+id/Localization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@mipmap/loc"
            app:layout_constraintBottom_toBottomOf="@id/CityName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/CityName" />

        <!--        data i godzina-->
        <TextView
            android:id="@+id/DateHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="11.03.2024 19:05"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/CityName"
            app:layout_constraintStart_toStartOf="@+id/CityName"
            app:layout_constraintTop_toTopOf="@id/CityName"
            tools:ignore="MissingConstraints,UnknownId" />

        <ImageButton
            android:id="@+id/HomeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#444544"
            android:backgroundTint="#35374B"
            android:src="@mipmap/home"
            app:layout_constraintEnd_toEndOf="@id/SmogButton"
            app:layout_constraintEnd_toStartOf="@+id/SmogButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/SmogButton"
            tools:ignore="MissingConstraints,NotSibling" />

        <TextView
            android:id="@+id/SmogButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_style"
            android:elevation="20dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="20"
            android:text="SMOG"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/PylkiButton"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/HomeButton"
            app:layout_constraintTop_toTopOf="@id/DateHour"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/PylkiButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:background="@drawable/button_style"
            android:elevation="20dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowRadius="20"
            android:text="PYŁKI"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/SmogButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@id/Rightguideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/SmogButton"
            app:layout_constraintTop_toTopOf="@id/SmogButton"
            tools:ignore="MissingConstraints" />
        <!-- HOME -->
        <androidx.cardview.widget.CardView
            android:id="@+id/HomeCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:backgroundTint="#35374B"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toBottomOf="@id/SmogButton">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/Leftguideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.03"
                    tools:context=".MainActivity" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/Rightguideline1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"

                    app:layout_constraintGuide_percent="0.97" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="SMOG"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints,NotSibling" />

                <!--        textview dla smogu-->
                <TextView
                    android:id="@+id/SmogTextView"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_style"
                    android:elevation="50dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="10"
                    android:text=""
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/Rightguideline1"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:text="PYŁKI"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--        textview dla pyłków-->
                <TextView
                    android:id="@+id/PylkiTextView"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="130dp"
                    android:background="@drawable/round_style"
                    android:elevation="40dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="10"
                    android:text=""
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/Rightguideline1"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:text="PORADY"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--        textview dla porad-->
                <TextView
                    android:id="@+id/PoradyTextView"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="220dp"
                    android:background="@drawable/round_style"
                    android:elevation="40dp"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:shadowRadius="10"
                    android:text=""
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@id/Rightguideline1"
                    app:layout_constraintStart_toStartOf="@id/Leftguideline1"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
        <!--- !!!!!!! SMOG !!!!!!!!!!-->
        <androidx.cardview.widget.CardView
            android:id="@+id/SmogCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#35374B"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/SmogButton"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
