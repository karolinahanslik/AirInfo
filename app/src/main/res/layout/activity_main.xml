                            android:layout_height="80dp"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/smog_style"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/PM2_TextView"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--        PM10 wartosc z API-->
                        <TextView
                            android:id="@+id/PM10_TextView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/smog_style"
                            android:elevation="30dp"
                            android:gravity="center"
                            android:text="--"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toStartOf="@+id/PM2_TextView"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--        PM2,5 wartosc z API-->
                        <TextView
                            android:id="@+id/PM2_TextView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/smog_style"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintEnd_toStartOf="@+id/CO_TextView"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/PM10_TextView"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!--        CO odniesienie do normy-->
                        <TextView
                            android:id="@+id/CO_Norma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="--"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/CO_TextView"
                            app:layout_constraintStart_toStartOf="@+id/CO_TextView"
                            app:layout_constraintTop_toBottomOf="@id/CO_TextView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PM 2,5"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="10dp"
                            app:layout_constraintEnd_toEndOf="@+id/PM2_TextView"
                            app:layout_constraintStart_toStartOf="@+id/PM2_TextView" />

                        <!--        PM2,5 odniesienie do normy-->
                        <TextView
                            android:id="@+id/PM2_Norma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="90dp"
                            android:text="--"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/PM2_TextView"
                            app:layout_constraintStart_toStartOf="@+id/PM2_TextView"
                            app:layout_constraintTop_toTopOf="@id/PM2_TextView" />
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/SO2_Nazwa"
                        app:layout_constraintTop_toBottomOf="@id/PM10_TextView"
                        app:layout_constraintStart_toStartOf="@id/PM10_TextView"
                        app:layout_constraintEnd_toEndOf="@id/PM10_TextView"
                        android:layout_marginTop="40dp"
                        android:text="SO2"/>
                        <!-- SO2 Wartość z API-->
                        <TextView
                            android:id="@+id/SO2_TextView"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="60dp"
                            android:background="@drawable/smog_style"
                            android:elevation="10dp"
                            android:gravity="center"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            app:layout_constraintTop_toBottomOf="@id/PM10_TextView"
                            app:layout_constraintStart_toStartOf="@id/PM10_TextView"
                            />
                        <!-- SO2 odniesienie do normy-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/SO2_Norma"
                            android:layout_marginTop="10dp"
                            android:text="--"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toBottomOf="@id/SO2_TextView"
                            app:layout_constraintStart_toStartOf="@id/SO2_TextView"
                            app:layout_constraintEnd_toEndOf="@id/SO2_TextView"
                            />
                        <TextView
                            android:layout_width="wrap_content"
