                        <!--        PM10 odniesienie do normy-->
                        <TextView
                            android:id="@+id/PM10_Norma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="--"
                            android:textColor="@color/white"
                            app:layout_constraintEnd_toEndOf="@+id/PM10_TextView"
                            app:layout_constraintStart_toStartOf="@+id/PM10_TextView"
                            app:layout_constraintTop_toBottomOf="@id/PM10_TextView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CO"
                            android:textColor="@color/white"
                            app:layout_constraintTop_toTopOf="parent"
